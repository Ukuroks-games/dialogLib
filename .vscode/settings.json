{
	"editor.insertSpaces": false,
	"editor.defaultFormatter": "JohnnyMorganz.stylua",
	
	"cSpell.enabled": true,
	"cSpell.words": [
		"Roblox",
		"rojo",
		"setmetatable"
	],

	"cSpell.ignorePaths": [
		"vscode-extension",
		".git/objects",
		".vscode",	// ignore vscode workspace settings
		".vscode-insiders",
		"*.toml"	// ignore toml files
	],

	"luau-lsp.sourcemap.rojoProjectFile": "tests.project.json",
	"luau-lsp.platform.type": "roblox",
	"luau-lsp.sourcemap.useVSCodeWatcher": true,
	"luau-lsp.sourcemap.generatorCommand": "make sourcemap.json",
	"[toml]": {
		"editor.defaultFormatter": "tamasfe.even-better-toml"
	}
}
